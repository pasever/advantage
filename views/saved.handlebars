<div class="container">
  <div class="row">
    {{#each dbArticle }}
    <div class="col-lg-10">


      <div class="col-lg-2">
          <img class="thumb" src="http://www.discovermeteor.com/{{this.image}}">
      </div>
      <div class="col-lg-10">
        <article>
          <h3>
            <a href="http://www.discovermeteor.com{{this.link}}" target="_blank">{{ this.title }}</a>
      </h3>
      <h4>
        {{ this.summary }};
      </h4>
          <hr>
        </article>
      </div>



    </div>

    <div class="col-lg-2">
      <button class="notButton" value= {{ this._id }}> Notes (0) </button>
      <button class="favButton" value="Save" value= {{ this._id }}> Delete </button>
    </div>
    <div id="notesdiv">
      <form class="form" action="/articles/:id" method="POST" id="notes">
        <h3>Add a note below</h3>
        <hr/>
        <label>Name : </label>
        <input type="text" class="username" placeholder="John" />
        <input type="text" class="comment" placeholder="Comments..." />
        <input type="button" class="addNoteButton" data-id={{ this._id }} value="Add Note" />
        <input type="button" class="cancelbtn" value="Cancel" />
        <h5>
          David: Great article!
        </h5>
      </form>
    </div>

    {{/each}}
  </div>
</div>
